{{- /* Do not modify links with leading "//" as those represent a URL with same protocol as this connection */ -}}
{{- if and (gt (len .) 1) (and (hasPrefix . "/") (not (hasPrefix . "//"))) -}}
  {{- (slicestr . 1) | relLangURL -}}
{{- else -}}
  {{- . | relLangURL -}}
{{- end -}}
{{- /* Add # anchor back onto the URL */ -}}
{{- index (findRE "\\#.*" . 1) 0 -}}
